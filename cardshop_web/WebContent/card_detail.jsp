<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ page import= "java.sql.*" %>
<%@ page import= "DAO.CardsDAO" %>
<%@ page import= "java.util.ArrayList" %>
<%@ page import= "DTO.Card" %>

<!DOCTYPE html>
<html>
	<head>
    <meta charset="UTF-8"/>
    </head>
    <body>
    <%
    CardsDAO cdao = new CardsDAO();
	String code = request.getParameter("code");
	ArrayList<Card> cards = cdao.findbycode(code);
	String name = "";
	String rare = "";
	String price = "";
	Card c = cards.get(0);
	name = c.getName();
	rare = String.valueOf(c.getRare());
	price = String.valueOf(c.getPrice());
	/*
	for(Card c: cards) {
		name = c.getName();
		rare = String.valueOf(c.getRare());
		price = String.valueOf(c.getPrice());
	}
	*/
    %>
     <h1><center><b><font size=21><%= name%> (<%= code %>)</font></center></b></h1>
      <p>
      <center><image src="imgs/detail_pic1.jpg" height="400" width="400"></center>
      </p>
      <center><b><font size=21>レア: <%= rare %><br></font></center></b>
      <center><b><font size=21>価格: <%= price %></font></center></b><br>
      <center><a href="card_list.jsp">一覧に戻る</a></center>
    </body>
</html>
